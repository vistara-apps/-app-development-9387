{
  "name": "NotePay - Track Payments & Share Context",
  "short_name": "NotePay",
  "description": "A Base MiniApp for easily tracking payments and sharing contextual notes with others.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e1b4b",
  "theme_color": "#1e40af",
  "orientation": "portrait-primary",
  "categories": ["finance", "productivity", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "NotePay mobile dashboard"
    },
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "NotePay desktop dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "New Payment",
      "short_name": "Pay",
      "description": "Create a new payment",
      "url": "/?action=new-payment",
      "icons": [
        {
          "src": "/icon-shortcut-payment.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View payment dashboard",
      "url": "/?action=dashboard",
      "icons": [
        {
          "src": "/icon-shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "scope": "/",
  "id": "notepay-base-miniapp",
  "protocol_handlers": [
    {
      "protocol": "web+notepay",
      "url": "/?payment=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
